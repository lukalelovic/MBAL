{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "systemName": {
            "type": "string"
        },
        "nodes": {
            "type": "array",
            "items": [
                {
                    "type": "object",
                    "properties": {
                        "nodeName": {
                            "type": "string"
                        },
                        "recievesFrom": {
                            "type": "object"
                        },
                        "sendsTo": {
                            "type": "array",
                            "items": [
                                {
                                    "type": "object",
                                    "properties": {
                                        "nodeName": {
                                            "type": "string"
                                        },
                                        "requests": {
                                            "type": "array",
                                            "items": [
                                                {
                                                    "type": "object",
                                                    "properties": {
                                                        "requestName": {
                                                            "type": "string"
                                                        },
                                                        "requestType": {
                                                            "type": "string"
                                                        }
                                                    },
                                                    "required": [
                                                        "requestName",
                                                        "requestType"
                                                    ]
                                                }]
                                        }
                                    },
                                    "required": [
                                        "nodeName",
                                        "requests"
                                    ]
                                }
                            ]
                        }
                    },
                    "required": [
                        "nodeName",
                        "sendsTo"
                    ]
                }
            ]
        }
    },
    "required": [
        "systemName",
        "nodes"
    ]
}